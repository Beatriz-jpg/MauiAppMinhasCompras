<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProdutoPage"
             Title="Adicionar Produto">

    <VerticalStackLayout Spacing="10" Padding="20">
        <Label Text="Descrição do Produto" />
        <Entry x:Name="txtDescricao"
               Placeholder="Ex: Arroz, Feijão, etc." />

        <Label Text="Quantidade" />
        <Entry x:Name="txtQuantidade"
               Placeholder="Ex: 5"
               Keyboard="Numeric" />

        <Label Text="Preço" />
        <Entry x:Name="txtPreco"
               Placeholder="Ex: 10.50"
               Keyboard="Numeric" />

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="0, 20, 0, 0">
            <Button Text="Adicionar"
                    Clicked="OnAdicionarClicked" />

            <Button Text="Voltar"
                    Clicked="OnVoltarClicked"
                    BackgroundColor="Gray" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>