<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProdutoPage"
             Title="Meus Produtos">

    <VerticalStackLayout Spacing="10" Padding="10">
        <Button Text="Adicionar Produto"
                Clicked="OnAdicionarProdutoClicked"
                HorizontalOptions="Center" />

        <CollectionView x:Name="ProdutosList"
                        SelectionMode="Single"
                        SelectionChanged="OnProdutoSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0"
                               Text="{Binding Descricao}"
                               FontAttributes="Bold" />
                        <Label Grid.Row="1" Grid.Column="0"
                               Text="{Binding Quantidade, StringFormat='Quantidade: {0}'}"
                               FontSize="Small" />
                        <Label Grid.Row="1" Grid.Column="1"
                               Text="{Binding Preco, StringFormat='PreÃ§o: R${0}'}"
                               FontSize="Small" />

                        <Button Grid.Row="0" Grid.Column="2" Grid.RowSpan="2"
                                Text="X"
                                BackgroundColor="Red"
                                TextColor="White"
                                WidthRequest="40"
                                HeightRequest="40"
                                Margin="10,0,0,0"
                                VerticalOptions="Center"
                                Clicked="OnExcluirClicked" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>